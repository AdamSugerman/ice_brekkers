<h1>Listing Contexts</h1>

<table>
  <thead>
    <tr>
      <th>Situation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contexts.each do |context| %>
      <tr>
        <td><%= context.situation %></td>
        <td><%= radio_button_tag :context, context.situation %></td>
    <% end %>
  </tbody>
</table>

<br>

